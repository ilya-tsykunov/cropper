%h2 Edit #{resource_name.to_s.humanize}

.row
  .col-xs-4
    = simple_form_for resource, as: resource_name, url: registration_path(resource_name),
      html: { method: :put } do |f|
      = devise_error_messages!
      = f.input :name, as: :string, required: true
      = f.input :email, as: :email, required: true
      = f.input :password, required: true, input_html: { autocomplete: 'off' }
      = f.input :password_confirmation, required: true, input_html: { autocomplete: 'off' }
      = f.input :current_password, required: true, input_html: { autocomplete: 'off' }
      = f.input :send_notifications, as: :boolean

      = f.submit 'Update'
